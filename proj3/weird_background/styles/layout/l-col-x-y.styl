cols-n(n)
  for i in 1..n
    $l-col-{i}-{n}
      display block
      position absolute
      width unit(100/n, '%')
      left unit( (i - 1)*100/n, '%')
      padding-top     .5in
      padding-bottom  .8in
      background     #FF8E00
      border-bottom 5px solid #222
      color black
      
      a
          color black
      
      h3
          text-align center

for i in 1..12
  cols-n(i)
