body
    margin 0
    margin-top 8%
    padding 0%
    background-image url('styles/colored1.jpg')

.intro
    h1
        z-index        2
        position       fixed
        top            0
        left           0
        margin-top     0
        width          100%
        padding        3px
        background     #8F9A55
        color          white
        text-align     center
        box-shadow     0px 1px 5px 0px #222222
        font-size 2em
        font-family PT serif
        
.sidebar
    z-index            1
    position           fixed
    top                -27.5%
    margin-left        0
    margin-right       0
    padding            1.25%
    width              100%
    box-shadow     0px 1px 5px 0px #222222
    transition all 0.2s ease-in-out
    
    .design-selection
        @extends $l-col-1-3
        height     2in
        
    .design-archives
        @extends $l-col-2-3
        height     2in
        
    .zen-resources
        @extends $l-col-3-3
        height     2in
    
.sidebar:hover
    top -2.5%

.intro, .main
    margin-left 11%
    margin-right 11%
    margin-top 1.5%
    margin-bottom 1.5%
    width 75%
    padding-left 1.5%
    padding-right 1.5%
    padding-top 1.5%
    padding-bottom 1.5%
    box-shadow inset 0px 0px 7px 3px black
    background white
    